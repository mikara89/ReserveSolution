@model RegisterViewModel

    <form asp-controller="Auth" asp-action="Register" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div>
            <label>Username:</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label>Password:</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label>Comform Password:</label>
            <input asp-for="ComformPassword" />
            <span asp-validation-for="ComformPassword"></span>
        </div>

        <div>
            <button type="submit">Sign Up</button>
        </div>

    </form>
    <div>
        <a asp-controller="Auth" asp-action="Login"
           asp-route-returnUrl="@Model.ReturnUrl">Back to Login</a>
    </div>